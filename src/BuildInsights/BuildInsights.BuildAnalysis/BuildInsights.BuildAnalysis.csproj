    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    <PackageReference Include="Microsoft.TeamFoundation.DistributedTask.Common" />
    <PackageReference Include="Microsoft.TeamFoundationServer.Client" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BuildInsights.Data\BuildInsights.Data.csproj" />
    <ProjectReference Include="..\BuildInsights.GitHub\BuildInsights.GitHub.csproj" />
    <ProjectReference Include="..\BuildInsights.KnownIssues\BuildInsights.KnownIssues.csproj" />
    <ProjectReference Include="..\BuildInsights.Utilities.Parallel\BuildInsights.Utilities.Parallel.csproj" />
    <ProjectReference Include="..\QueueInsights\QueueInsights.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Templates\**\*.hbs">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>true</Pack>
    </None>
  </ItemGroup>

</Project>
