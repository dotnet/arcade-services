<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <SelfContained>true</SelfContained>
    <IsServiceFabricServiceProject>True</IsServiceFabricServiceProject>
    <UserSecretsId>SecretManager</UserSecretsId>
    <RootNamespace>Microsoft.Internal.Helix.KnownIssuesMonitor</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <Content Include=".config\settings*.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.DotNet.GitHub.Authentication" />
    <PackageReference Include="Microsoft.DotNet.ServiceFabric.ServiceHost" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Utility\Helix.Utility.GitHubGraphQL\Helix.Utility.GitHubGraphQL.csproj" />
    <ProjectReference Include="..\Helix.Internal.KnownIssues\Helix.Internal.KnownIssues.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Properties\launchSettings.json">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>Never</CopyToPublishDirectory>
    </None>
  </ItemGroup>

</Project>
