<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <ImplicitUsings>enable</ImplicitUsings>
    <!-- TODO <Nullable>enable</Nullable> -->
    <!-- We're referencing Maestro.Data, which isn't signed and doesn't have a strong name, so we can't be signed neither -->
    <SignAssembly>False</SignAssembly>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Handlebars.Net" />
    <PackageReference Include="Microsoft.DotNet.Kusto" />
    <PackageReference Include="Microsoft.Internal.Helix.Machines.MatrixOfTruthOutputDeserialization" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\BuildInsights.GitHub\BuildInsights.GitHub.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Templates\**\*.hbs">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Pack>true</Pack>
    </None>
  </ItemGroup>

</Project>
